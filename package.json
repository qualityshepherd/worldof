{
  "name": "World of Brine",
  "description": "World of Brine is a ttrpg podcast of words and worlds; meandering conversations and actual play games.",
  "version": "1.0.0",
  "author": "brine",
  "license": "MIT",
  "main": "index.html",
  "type": "module",
  "splog": {
    "title": "World of Brine",
    "description": "A ttrpg podcast of words and worlds...",
    "url": "https://worldof.brine.dev",
    "pathToIndex": "./src/data/siteIndex.json",
    "pathToPostsFolder": "./assets/posts",
    "pathToRssFolder": "./assets/rss",
    "maxPosts": "12"
  },
  "standard": {
    "env": [
      "browser"
    ]
  },
  "scripts": {
    "build:index": "node ./lib/genr8Index.js",
    "rss:blog": "node ./lib/genr8Blog.js",
    "rss:pod": "node ./lib/genr8Pod.js",
    "rss:sitemap": "node ./lib/genr8Sitemap.js",
    "start": "npm run build:index && npm run rss:blog && npm run rss:pod && npm run rss:sitemap",
    "pretest": "npm run server & sleep 1",
    "test": "TEST_ENV=http://localhost:4242 tape tests/*test.js",
    "posttest": "npm run kill",
    "server": "npm start && http-server -s -p 4242",
    "kill": "lsof -ti :4242 | xargs kill -9",
    "pretty": "standard --fix",
    "purge": "curl -X POST \"https://api.cloudflare.com/client/v4/zones/$BRINE_TOKEN/purge_cache\" -H \"Authorization: Bearer $BEARER\" -H \"Content-Type: application/json\" --data '{\"purge_everything\":true}'"
  },
  "devDependencies": {
    "http-server": "^14.1.1",
    "puppeteer": "^24.28.0",
    "standard": "^17.1.2",
    "tape": "^5.9.0"
  },
  "dependencies": {
    "marked": "^16.4.1"
  }
}
